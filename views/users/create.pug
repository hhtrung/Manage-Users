extends ../layouts/common.pug
block content
    h1 Create User
    if errors
      each error in errors
        .alert.alert-danger= error

    form(action='/users/create', method="POST")
      .form-group
        label(for='name') Name
        input#name.form-control(type='text', placeholder='Enter name', name='name', value= value ? value.name : '')
      .form-group
        label(for='phone') Phone
        input#phone.form-control(type='phone', placeholder='Enter phone', name='phone', value= value ? value.phone: '')
      button.btn.btn-primary(type='submit') Create


